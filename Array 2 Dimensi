#include <iostream>
#include <conio.h>
#include <iomanip>

using namespace std;
int main(int argc, char *argv[])
{
    cout<<" PENGURANGAN MATRIKS ARRAY 2 DIMENSI "<<endl;

    int mat1[1][1];
    int mat2[1][1];
    int mat3[1][1];
    
    for(int i=0; i<1; i++){
        for(int j=0; j<1; j++){
            cout<<"Data Matriks 1 ["<<i<<"] ["<<j<<"] : ";
            cin>>mat1[i][j];
        }
      }cout<<endl;
    for(int i=0; i<1; i++){
        for(int j=0; j<1; j++){
            cout<<"Data Matriks 2 ["<<i<<"] ["<<j<<"] : ";
            cin>>mat2[i][j];
        }
      }cout<<endl;
    cout<<"Matriks 1 - Matriks 2 :";
    for(int i=0; i<1; i++){
        for(int j=0; j<1; j++){
            mat3[i][j] = mat1[i][j]-mat2[i][j]; cout<<setw(3)<<mat3[i][j]<<endl;
            
            cout<<" Jadi hasil pengurangan matriks 1 - 2 = ";
            mat3[i][j] = mat1[i][j]-mat2[i][j]; cout<<setw(3)<<mat3[i][j]<<endl;
            
        }cout<<endl;
    }
  
    return 0;
}
